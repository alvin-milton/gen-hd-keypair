#!/usr/bin/env node
"use strict";

let argv = require("yargs")
  .usage("$0")
  .option("network", {
    alias: "n",
    describe: "Network key will be used on. One of: {main,testnet,regtest}",
    default: "main"
  })
  .option("mnemonic", {
    alias: "m",
    describe: "Use a given mnemonic instead of generating a random one"
  })
  .option("json", {
    alias: "j",
    describe: "Output JSON"
  })
  .help("help").argv;

require("../index")(argv);
